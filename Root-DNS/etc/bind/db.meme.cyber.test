;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
;Shortcuts and the zone name
;   The zone name defined by the reference to this file from named.conf.local 
;     is really important. In this case it is 'cyber.test'
;   * Where there is no trailing '.' (eg 'm1' NOT 'm1.') then the zone name 
;     is appended to the name so 'm1' becomes 'm1.cyber.test'
;   * The '@' symbol represents the the zone name
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
$TTL	8h
@	IN	SOA     root-dns.meme.cyber.test.    root.meme.cyber.test. (
		3 ; serial
		8h         ; refresh
		2h         ; retry
		1w         ; expire
		0          ; negative cache ttl
		)
;~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
; nameserver(s)
	IN	NS	root-dns.meme.cyber.test.


;int-dns.meme.cyber.test.	IN	A	10.0.1.5
;openvpn.meme.cyber.test.		IN	A	10.0.1.3
;mail.meme.cyber.test.		IN	A	10.0.1.4
;int-www.meme.cyber.test.		IN	A	10.0.1.6
;meme-fw.meme.cyber.test.		IN	A	10.0.1.2
;squid.meme.cyber.test.		IN	A	10.0.1.1

dhcp.meme.cyber.test.	IN	A	10.0.2.2
root-dns.meme.cyber.test.		IN	A	10.0.2.4
ldap.meme.cyber.test.		IN	A	10.0.2.5

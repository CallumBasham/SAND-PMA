# Called by generic named.conf
# Generic setting to be used by our DNS server


options {
	directory "/var/cache/bind";
	
	recursion yes;
	forward only; #recent...
	#allow-recursion { trusted; };
	listen-on { 10.0.2.4; };
	#allow-transfer { x.x.x.x; }; # Set this to slave DNS server...
	
	# If we don't know, go to Ext-DNS
	forwarders { 52.2.2.70; };
	
	auth-nxdomain no;    # conform to RFC1035
	
};

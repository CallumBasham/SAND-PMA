options {
	directory "/var/cache/bind";
	
	recursion yes;
	#allow-recursion { trusted; };
	listen-on { 10.0.2.4; };
	allow-transfer { none; }; # May need to enable this...?
	
	
	forwarders {
		8.8.8.8;
		8.8.4.4;
	};
	
	#forward only;

	#allow-query {
	#	172.16.0.0/12;
	#	10.0.1.0/28;
	#};

	#auth-nxdomain no;    # conform to RFC1035
	#listen-on-v6 { any; };
	
};

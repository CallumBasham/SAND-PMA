# [ Interfaces ]
# Edge Router
ifconfig eth0 10.0.0.2/30

# Edge Firewall
ifconfig eth1 10.0.1.1/28


# [ Routing ]
# List the Central Bridge of Meme Network
ip route add 10.0.0.32/29 via 10.0.1.2 dev eth1

# List the Staff Network behind the Meme Network
ip route add 10.1.0.0/20 via 10.0.1.2 dev eth1 

# List the Server Network behind the Meme Network
ip route add 10.0.2.0/28 via 10.0.1.2 dev eth1 

# Gateway to Router
route add default gw 10.0.0.1
